{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<h1>Inscription</h1>
	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.full_name) }}
	{# Champ du nom d'utilisateur #}
	{{ form_row(registrationForm.email) }}
	{# Champ de l'adresse email #}
	{{ form_row(registrationForm.password.first) }}
	{# Champ du mot de passe #}
	{{ form_row(registrationForm.password.second) }}
	{# Champ de la confirmation du mot de passe #}

	<button type="submit" class="btn btn-success">
		S'inscrire
	</button>
	{{ form_end(registrationForm) }}
{% endblock %}
